<div id="index" class="flex-container">
    <h3 class="flex-container" id="title"><a href="/spending-tracker/my-merchants">My merchants</a></h3>
</div>

<form method="post" action="/spending-tracker/my-merchants/<%= @merchant.id %>">

<label for="name"></label>
<input
    id="name"
    type="text"
    name="name"
    value="<%= @merchant.name %>"/>

<table>
    <thead>
        <tr>
        <th>Transactions</th>
        <th>Amounts</th>
        <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        <% for transaction in @transactions %>
            <tr>
                <td><a href="/spending-tracker/my-spendings/<%= transaction.id%>"><%= transaction.name %> </a></td>
                <td>Â£<%= transaction.amount %> </td>
                <td>
                    <% if transaction.tag_id == nil %>
                        none
                    <% else %>
                        <%= transaction.tag.name %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>


<input type="submit" id="update" name="update" value="Update">
<input type="submit" id="delete" name="delete" value="Delete">
</form>